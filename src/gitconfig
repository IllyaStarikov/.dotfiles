# Minimal Git Configuration - Only Essential Settings

[user]
    name = Illya Starikov
    email = illya@starikov.io

[core]
    editor = nvim
    pager = delta
    excludesfile = ~/.gitignore
    
[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    default = simple
    autoSetupRemote = true

[merge]
    conflictstyle = zdiff3

[diff]
    algorithm = histogram
    colorMoved = default

[commit]
    template = ~/.gitmessage
    gpgsign = true

# Essential Aliases Only (15 max)
[alias]
    # Status/Info
    s = status -sb
    l = log --oneline --graph --decorate -20
    
    # Basic operations
    a = add
    c = commit
    p = push
    pl = pull
    co = checkout
    b = branch
    
    # Useful shortcuts
    aa = add --all
    cm = commit -m
    undo = reset --soft HEAD~1
    amend = commit --amend --no-edit
    
    # Workflow
    main = checkout main
    wip = !git add -A && git commit -m 'WIP'

# Colors
[color]
    ui = auto

# Delta configuration
[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

# Performance (use defaults for most)
[pack]
    threads = 0

# Credential helper for GitHub
[credential "https://github.com"]
    helper = 
    helper = !/opt/homebrew/bin/gh auth git-credential

# Security and performance enhancements
[gpg]
    # Use SSH key for signing if available (easier than GPG)
    format = ssh

[user]
    # Point to your SSH key for signing (update path as needed)
    # signingkey = ~/.ssh/id_ed25519.pub

[transfer]
    fsckobjects = true

[receive]
    fsckobjects = true

[fetch]
    fsckobjects = true

[maintenance]
    auto = true
    strategy = incremental