#!/bin/bash
# Install git hooks for the dotfiles repository

set -euo pipefail

# Colors
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
RED='\033[0;31m'
NC='\033[0m'

DOTFILES_DIR="$HOME/.dotfiles"
HOOKS_DIR="$DOTFILES_DIR/src/hooks"
GIT_HOOKS_DIR="$DOTFILES_DIR/.git/hooks"

echo "ü™ù Installing Git Hooks"
echo "====================="
echo ""

# Check if we're in a git repository
if [[ ! -d "$DOTFILES_DIR/.git" ]]; then
    echo -e "${RED}Error: $DOTFILES_DIR is not a git repository${NC}"
    exit 1
fi

# Create hooks directory if it doesn't exist
mkdir -p "$GIT_HOOKS_DIR"

# Install pre-commit hook
if [[ -f "$HOOKS_DIR/pre-commit" ]]; then
    echo "Installing pre-commit hook..."
    cp "$HOOKS_DIR/pre-commit" "$GIT_HOOKS_DIR/pre-commit"
    chmod +x "$GIT_HOOKS_DIR/pre-commit"
    echo -e "${GREEN}‚úÖ Pre-commit hook installed${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Pre-commit hook not found${NC}"
fi

# Copy gitleaks config to repository root if not exists
if [[ -f "$DOTFILES_DIR/src/gitleaks.toml" ]] && [[ ! -f "$DOTFILES_DIR/.gitleaks.toml" ]]; then
    echo "Copying gitleaks configuration..."
    cp "$DOTFILES_DIR/src/gitleaks.toml" "$DOTFILES_DIR/.gitleaks.toml"
    echo -e "${GREEN}‚úÖ Gitleaks config installed${NC}"
fi

echo ""
echo -e "${GREEN}Git hooks installation complete!${NC}"
echo ""
echo "The following protections are now active:"
echo "  ‚Ä¢ Secret scanning on every commit (gitleaks)"
echo ""
echo "To bypass hooks in emergency (NOT RECOMMENDED):"
echo "  git commit --no-verify"