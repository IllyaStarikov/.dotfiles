#!/usr/bin/env bash
# Cross-platform scratchpad script

# Get temporary directory (works on both macOS and Linux)
TEMP_DIR="${TMPDIR:-${TMP:-/tmp}}"

# Use uuidgen if available, otherwise use random number
if command -v uuidgen >/dev/null 2>&1; then
    FILENAME="$(uuidgen)"
else
    FILENAME="scratch-$$-$RANDOM"
fi

# Add extension if provided
EXT="${1:+.$1}"

# Create and edit the temporary file
$EDITOR "${TEMP_DIR}/${FILENAME}${EXT}"