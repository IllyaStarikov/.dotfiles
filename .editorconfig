# EditorConfig for dotfiles repository
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files (Google Python Style Guide: 4 spaces)
[*.{py,pyw,pyi}]
indent_size = 4
max_line_length = 80

# C/C++ files (Google C++ Style Guide: 2 spaces)
[*.{c,h,cpp,hpp,cc,cxx,hxx}]
indent_size = 2
max_line_length = 80

# Shell scripts (Google Shell Style Guide: 2 spaces)
[*.{sh,bash,zsh,fish}]
indent_size = 2
max_line_length = 80

# JavaScript/TypeScript (Google JS Style Guide: 2 spaces)
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 80

# Web files (Google HTML/CSS Style Guide: 2 spaces)
[*.{html,htm,css,scss,sass,less,xml}]
indent_size = 2
max_line_length = 80

# Swift files (2 spaces)
[*.swift]
indent_size = 2
max_line_length = 100

# Lua files (2 spaces)
[*.lua]
indent_size = 2
max_line_length = 80

# LaTeX files (2 spaces)
[*.{tex,bib,cls,sty}]
indent_size = 2
max_line_length = 80

# Ruby files (2 spaces)
[*.{rb,rake,gemspec}]
indent_size = 2
max_line_length = 80

# Rust files (4 spaces)
[*.rs]
indent_size = 4
max_line_length = 100

# Go files (tabs)
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 80

# Makefiles (tabs required)
[{Makefile,makefile,*.mk,*.mak}]
indent_style = tab
indent_size = 4

# YAML files (2 spaces)
[*.{yaml,yml}]
indent_size = 2

# TOML files (2 spaces)
[*.toml]
indent_size = 2

# JSON files (2 spaces)
[*.{json,jsonc}]
indent_size = 2

# Markdown files (2 spaces, don't trim trailing whitespace)
[*.{md,markdown}]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100