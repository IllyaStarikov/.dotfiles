{
  "formatters": {
    "ruff": {
      "command": "ruff",
      "check_command": "ruff --version",
      "format_args": "format --line-length 100 {file}",
      "fix_args": "check --fix --line-length 100 {file}",
      "description": "Fast Python linter and formatter (Rust-based)"
    },
    "black": {
      "command": "black",
      "check_command": "black --version",
      "format_args": "-q --line-length 100 --skip-string-normalization {file}",
      "description": "Python code formatter"
    },
    "yapf": {
      "command": "yapf",
      "check_command": "yapf --version",
      "format_args": "-i --style=google {file}",
      "description": "Google's Python formatter"
    },
    "autopep8": {
      "command": "autopep8",
      "check_command": "autopep8 --version",
      "format_args": "-i --max-line-length 100 {file}",
      "description": "Python PEP8 formatter"
    },
    "isort": {
      "command": "isort",
      "check_command": "isort --version",
      "format_args": "--profile google --line-length 100 {file}",
      "description": "Python import sorter"
    },
    "clang-format": {
      "command": "clang-format",
      "check_command": "clang-format --version",
      "format_args": "-i -style='{BasedOnStyle: Google, IndentWidth: 2, ColumnLimit: 80}' {file}",
      "description": "C/C++ formatter"
    },
    "astyle": {
      "command": "astyle",
      "check_command": "astyle --version",
      "format_args": "--style=google --indent=spaces=2 {file}",
      "description": "Artistic Style C/C++ formatter"
    },
    "shfmt": {
      "command": "shfmt",
      "check_command": "shfmt -version",
      "format_args": "-i 2 -bn -ci -w {file}",
      "description": "Shell script formatter"
    },
    "beautysh": {
      "command": "beautysh",
      "check_command": "beautysh --version",
      "format_args": "-i 2 {file}",
      "description": "Bash beautifier"
    },
    "stylua": {
      "command": "stylua",
      "check_command": "stylua --version",
      "format_args": "--config-path ~/.dotfiles/.stylua.toml {file}",
      "description": "Lua formatter"
    },
    "lua-format": {
      "command": "lua-format",
      "check_command": "lua-format --version",
      "format_args": "-i --indent-width=2 {file}",
      "description": "Lua code formatter"
    },
    "prettier": {
      "command": "prettier",
      "check_command": "prettier --version",
      "format_args": "--write --tab-width 2 --print-width 80 --single-quote --trailing-comma none --arrow-parens avoid {file}",
      "description": "Web code formatter"
    },
    "prettierd": {
      "command": "prettierd",
      "check_command": "prettierd --version",
      "format_args": "--write --tab-width 2 --print-width 80 --single-quote --trailing-comma none --arrow-parens avoid {file}",
      "description": "Prettier daemon (faster)"
    },
    "eslint": {
      "command": "eslint",
      "check_command": "eslint --version",
      "format_args": "--fix {file}",
      "description": "JavaScript linter and formatter"
    },
    "rustfmt": {
      "command": "rustfmt",
      "check_command": "rustfmt --version",
      "format_args": "--edition 2021 {file}",
      "description": "Rust formatter"
    },
    "gofmt": {
      "command": "gofmt",
      "check_command": "gofmt -h",
      "format_args": "-w {file}",
      "description": "Go formatter"
    },
    "goimports": {
      "command": "goimports",
      "check_command": "goimports -h",
      "format_args": "-w {file}",
      "description": "Go imports formatter"
    },
    "text-formatter": {
      "command": "internal",
      "format_args": "normalize_whitespace",
      "description": "Built-in text file formatter"
    },
    "swiftformat": {
      "command": "swiftformat",
      "check_command": "swiftformat --version",
      "format_args": "--indent 2 --maxwidth 100 {file}",
      "description": "Swift formatter"
    },
    "sqlformat": {
      "command": "sqlformat",
      "check_command": "sqlformat --version",
      "format_args": "-r -k upper --indent_width 2 --output {file} {file}",
      "description": "SQL formatter"
    },
    "pg_format": {
      "command": "pg_format",
      "check_command": "pg_format --version",
      "format_args": "-i {file}",
      "description": "PostgreSQL formatter"
    },
    "latexindent": {
      "command": "latexindent",
      "check_command": "latexindent --version",
      "format_args": "-w -s {file}",
      "description": "LaTeX formatter"
    },
    "xmlformatter": {
      "command": "xmlformatter",
      "check_command": "xmlformatter --version",
      "format_args": "-i 2 {file}",
      "description": "XML formatter"
    },
    "xmllint": {
      "command": "xmllint",
      "check_command": "xmllint --version",
      "format_args": "--format --output {file} {file}",
      "description": "XML linter and formatter"
    },
    "cmake-format": {
      "command": "cmake-format",
      "check_command": "cmake-format --version",
      "format_args": "-i {file}",
      "description": "CMake formatter"
    },
    "rubocop": {
      "command": "rubocop",
      "check_command": "rubocop --version",
      "format_args": "-A {file}",
      "description": "Ruby linter and formatter"
    },
    "rufo": {
      "command": "rufo",
      "check_command": "rufo --version",
      "format_args": "{file}",
      "description": "Ruby formatter"
    },
    "taplo": {
      "command": "taplo",
      "check_command": "taplo --version",
      "format_args": "format {file}",
      "description": "TOML formatter"
    },
    "toml-sort": {
      "command": "toml-sort",
      "check_command": "toml-sort --version",
      "format_args": "-i {file}",
      "description": "TOML sorter"
    },
    "perltidy": {
      "command": "perltidy",
      "check_command": "perltidy --version",
      "format_args": "-b {file}",
      "description": "Perl formatter"
    },
    "asmfmt": {
      "command": "asmfmt",
      "check_command": "asmfmt -h",
      "format_args": "-w {file}",
      "description": "Assembly formatter"
    },
    "nasm": {
      "command": "nasm",
      "check_command": "nasm --version",
      "format_args": "-f elf64 {file}",
      "description": "NASM assembler"
    }
  },
